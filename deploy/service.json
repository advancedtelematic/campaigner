[{
  "id": "${DEPLOY_ENV}/${JOB_NAME}",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "$MARATHON_CONSTRAINTS"]],
  "cpus": $USE_CPU,
  "mem": $USE_MEM,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${IMAGE_ARTIFACT}",
      "parameters": [{"key": "log-driver", "value": "syslog"},
                     {"key": "log-opt", "value": "tag=${JOB_NAME}"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 9001,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    }
  },
  "env": {
    "BIND_PORT": "9001",
    "DB_MIGRATE": "true",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "DB_URL": "${DB_URL}",
    "DB_USER": "${DB_USER}",
    "DEVICE_REGISTRY_HOST": "${DEVICE_REGISTRY_HOST}",
    "DEVICE_REGISTRY_PORT": "${DEVICE_REGISTRY_PORT}",
    "DIRECTOR_HOST": "${DIRECTOR_HOST}",
    "DIRECTOR_PORT": "${DIRECTOR_PORT}",
    "ENV_PREFIX": "${ENV_PREFIX}",
    "INFLUXDB_HOST": "${INFLUXDB_HOST}",
    "INFLUXDB_PORT": "${INFLUXDB_PORT}",
    "JAVA_OPTS": "${JAVA_OPTS}",
    "KAFKA_BOOTSTRAP_SERVERS": "${KAFKA_BOOTSTRAP_SERVERS}",
    "KAFKA_HOST": "${KAFKA_HOST}",
    "KAFKA_TOPIC_SUFFIX": "${KAFKA_TOPIC_SUFFIX}",
    "MESSAGING_MODE": "kafka",
    "METRICS_DB": "${METRICS_DB}",
    "SCHEDULER_BATCH_SIZE": "${SCHEDULER_BATCH_SIZE}",
    "SCHEDULER_DELAY": "${SCHEDULER_DELAY}",
    "SCHEDULER_POLLING_TIMEOUT": "${SCHEDULER_POLLING_TIMEOUT}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
    "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
    "SERVICE_NAME": "${JOB_NAME}",
    "SERVICE_SCOPE": "internal",
    "SERVICE_TYPE": "http"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }]
},
 {
  "id": "${DEPLOY_ENV}/${JOB_NAME}-daemon",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "$MARATHON_CONSTRAINTS"]],
  "cpus": $USE_CPU,
  "mem": $USE_MEM,
  "instances": 1,
  "args": ["-main", "com.advancedtelematic.campaigner.DaemonBoot"],
   "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${IMAGE_ARTIFACT}",
      "parameters": [{"key": "log-driver", "value": "syslog"},
                     {"key": "log-opt", "value": "tag=${JOB_NAME}-daemon"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 9001,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    }
  },
  "env": {
    "BIND_PORT": "9001",
    "DB_MIGRATE": "true",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "DB_URL": "${DB_URL}",
    "DB_USER": "${DB_USER}",
    "DEVICE_REGISTRY_HOST": "${DEVICE_REGISTRY_HOST}",
    "DEVICE_REGISTRY_PORT": "${DEVICE_REGISTRY_PORT}",
    "DIRECTOR_HOST": "${DIRECTOR_HOST}",
    "DIRECTOR_PORT": "${DIRECTOR_PORT}",
    "ENV_PREFIX": "${ENV_PREFIX}",
    "INFLUXDB_HOST": "${INFLUXDB_HOST}",
    "INFLUXDB_PORT": "${INFLUXDB_PORT}",
    "JAVA_OPTS": "${JAVA_OPTS}",
    "KAFKA_BOOTSTRAP_SERVERS": "${KAFKA_BOOTSTRAP_SERVERS}",
    "KAFKA_HOST": "${KAFKA_HOST}",
    "KAFKA_TOPIC_SUFFIX": "${KAFKA_TOPIC_SUFFIX}",
    "MESSAGING_MODE": "kafka",
    "METRICS_DB": "${METRICS_DB}",
    "SCHEDULER_BATCH_SIZE": "${SCHEDULER_BATCH_SIZE}",
    "SCHEDULER_DELAY": "${SCHEDULER_DELAY}",
    "SCHEDULER_POLLING_TIMEOUT": "${SCHEDULER_POLLING_TIMEOUT}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
    "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
    "SERVICE_NAME": "${JOB_NAME}-daemon",
    "SERVICE_SCOPE": "internal",
    "SERVICE_TYPE": "http"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }]
 }]

